<h1>Cocktails</h1>


<div>
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/500x400/?cocktail)">
      Breakfast
    <div class="card-description">
      <h2> <%=  cocktail.name %> </h2>
    </div>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>

  <% end %>
</div>

<div class='btn btn-primary'>
   <%= link_to "Add a new cocktail!", new_cocktail_path %>
</div>
